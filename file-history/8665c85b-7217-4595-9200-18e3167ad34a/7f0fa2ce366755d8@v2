#!/bin/bash
# Helix with auto-format on open
# Opens file in Helix and immediately triggers format

if [ -z "$1" ]; then
    echo "Usage: hxf <file>"
    echo "Opens file in Helix and auto-formats it"
    exit 1
fi

# Open file and send format command via stdin
# The -c flag runs commands after opening
helix "$1" -c ':fmt'
