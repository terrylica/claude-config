# MQL5 Article Extraction Configuration
#
# This file contains all configurable parameters for the extraction system.
# You can override these settings via CLI arguments when running mql5_extract.py

extraction:
  # Output directory for extracted articles (user_id/article_id hierarchy)
  output_dir: "mql5_articles"

  # Run browser in headless mode (no UI)
  headless: true

  # Page load timeout in milliseconds
  timeout_ms: 30000

retry:
  # Maximum number of retry attempts for failed extractions
  max_attempts: 3

  # Initial backoff delay in seconds (doubles each retry)
  initial_backoff_seconds: 5

  # Maximum backoff delay in seconds
  max_backoff_seconds: 60

  # Exponential backoff multiplier base
  exponential_base: 2

batch:
  # Delay between article extractions (seconds) - be respectful to server
  rate_limit_seconds: 2

  # Checkpoint file to track progress and enable resume
  checkpoint_file: ".extraction_checkpoint.json"

  # Automatically resume from checkpoint on restart
  resume_on_restart: true

  # Continue processing even if some articles fail
  continue_on_error: true

logging:
  # Logging level: DEBUG, INFO, WARNING, ERROR
  level: "INFO"

  # Log file path (set to empty string to disable file logging)
  file: "extraction.log"

  # Enable console logging output
  console: true

validation:
  # Minimum word count for valid article content
  min_word_count: 500

  # Minimum number of code blocks expected
  min_code_blocks: 1

  # Reject articles that appear to be login popups
