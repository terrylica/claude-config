#set page(
  paper: "us-letter",
  flipped: true,
  margin: (x: 0.4in, y: 0.5in),
)

#set text(
  font: "Charter",
  size: 8pt,
)

#show heading: set text(font: "Helvetica Neue", weight: "bold")

#set par(justify: false, leading: 0.4em)

// Define consistent table styling with fixed first column width
#let shortcut-table(..rows) = {
  table(
    columns: (4.8cm, 1fr),
    stroke: none,
    inset: (x: 0.3em, y: 0.25em),
    align: (left, left),
    table.header([*Shortcut*], [*Action*]),
    table.hline(stroke: 0.5pt),
    ..rows
  )
}

// Title section
#align(center)[
  #text(size: 16pt, weight: "bold")[Ghostty Keyboard Shortcuts Cheat Sheet]

  #v(0.1em)

  #text(size: 9pt, fill: gray)[terryli\@macOS • 88 keybindings • 2025-10-08]
]

#v(1em)

// Three-column layout
#grid(
  columns: (1fr, 1fr, 1fr),
  column-gutter: 1.5em,

  // COLUMN 1
  [
    === Window & App
    #shortcut-table(
      [`Cmd+N`], [New Window],
      [`Cmd+Q`], [Quit],
      [`Cmd+Shift+W`], [Close Window],
      [`Cmd+W`], [Close Surface],
      [`Cmd+Shift+,`], [Reload Config],
      [`Cmd+,`], [Open Config],
      [`Cmd+Shift+P`], [Command Palette],
      [`Cmd+Option+I`], [Inspector],
      [*`Cmd+Shift+I`*], [*Change Title*],
    )

    #v(0.8em)

    === Tabs
    #shortcut-table(
      [`Cmd+T`], [New Tab],
      [`Cmd+Option+W`], [Close Tab],
      [`Cmd+1-8`], [Go to Tab 1-8],
      [`Cmd+9`], [Last Tab],
      [`Ctrl+Tab`], [Next Tab],
      [`Ctrl+Shift+Tab`], [Previous Tab],
      [`Cmd+Shift+[`], [Previous Tab],
      [`Cmd+Shift+]`], [Next Tab],
    )

    #v(0.8em)

    === Splits: Create
    #shortcut-table(
      [`Cmd+D`], [New Split Right],
      [`Cmd+Shift+D`], [New Split Down],
      [`Cmd+Option+↑↓←→`], [Go to Split],
      [`Cmd+[`], [Previous Split],
      [`Cmd+]`], [Next Split],
      [`Cmd+Shift+Enter`], [Zoom Split],
    )

    #v(0.8em)

    === Splits: Resize
    #shortcut-table(
      [`Cmd+Ctrl+↑↓←→`], [Resize Split],
      [`Cmd+Ctrl+=`], [Equalize Splits],
      [`Cmd+Enter`], [Fullscreen],
      [`Cmd+Ctrl+F`], [Fullscreen],
    )
  ],

  // COLUMN 2
  [
    === Selection
    #shortcut-table(
      [`Cmd+A`], [Select All],
      [`Shift+↑↓←→`], [Adjust Selection],
      [`Shift+Home/End`], [Select Line Start/End],
      [`Shift+PgUp/PgDn`], [Select Page],
    )

    #v(0.8em)

    === Copy & Paste
    #shortcut-table(
      [`Cmd+C`], [Copy],
      [`Cmd+V`], [Paste],
      [`Cmd+Shift+V`], [Paste Selection],
    )

    #v(0.8em)

    === Scrolling
    #shortcut-table(
      [`Cmd+Home`], [Scroll to Top],
      [`Cmd+End`], [Scroll to Bottom],
      [`Cmd+PgUp/PgDn`], [Scroll Page],
      [`Cmd+↑`], [Previous Prompt],
      [`Cmd+↓`], [Next Prompt],
    )

    #v(0.8em)

    === Font
    #shortcut-table(
      [`Cmd++` / `Cmd+=`], [Increase Font],
      [`Cmd+-`], [Decrease Font],
      [`Cmd+0`], [Reset Font],
    )

    #v(0.8em)

    === Screen Output
    #shortcut-table(
      [`Cmd+K`], [Clear Screen],
      [`Cmd+Option+Shift+J`], [Write Screen (Open)],
      [`Cmd+Ctrl+Shift+J`], [Write Screen (Copy)],
      [`Cmd+Shift+J`], [Write Screen (Paste)],
    )
  ],

  // COLUMN 3
  [
    === Text Editing
    #shortcut-table(
      [`Shift+Enter`], [Escape + Newline],
      [`Cmd+←`], [Line Start],
      [`Cmd+→`], [Line End],
      [`Cmd+Backspace`], [Delete Line],
      [`Option+←/→`], [Word Left/Right],
    )

    #v(0.8em)

    === Undo/Redo
    #shortcut-table(
      [`Cmd+Z`], [Undo],
      [`Cmd+Shift+Z`], [Redo],
      [`Cmd+Shift+T`], [Undo],
    )

    #v(0.8em)

    === Window Mgmt
    #shortcut-table(
      [`Cmd+Option+Shift+W`], [Close All Windows],
    )

    #v(2em)

    #align(left)[
      #text(size: 7.5pt, weight: "semibold")[Key Legend]

      #v(0.3em)

      #text(size: 7pt)[Cmd=⌘ • Option=⌥ • Ctrl=⌃ • Shift=⇧]

      #v(0.4em)

      #text(size: 7pt, fill: gray.darken(20%))[Config: #box(fill: gray.lighten(80%), inset: (x: 0.2em, y: 0.1em), radius: 2pt)[`~/.config/ghostty/config`]]
    ]
  ]
)
