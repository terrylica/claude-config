components:
  schemas:
    ImplementationStatus:
      type: object
      required:
        - phase
        - status
        - completion_percentage
        - components
      properties:
        phase:
          type: string
        status:
          type: string
          enum: ["completed", "in_progress", "pending", "blocked"]
        completion_percentage:
          type: integer
          minimum: 0
          maximum: 100
        components:
          type: array
          items:
            $ref: "#/components/schemas/ComponentStatus"

    ComponentStatus:
      type: object
      required:
        - path
        - status
        - lines_of_code
        - error_handling
        - slo_compliance
      properties:
        path:
          type: string
        status:
          type: string
          enum: ["implemented", "in_progress", "pending"]
        lines_of_code:
          type: integer
        error_handling:
          type: string
          enum: ["raise_and_propagate", "not_applicable"]
        slo_compliance:
          type: object
          properties:
            correctness:
              type: string
            observability:
              type: string
            maintainability:
              type: string

