# Rust Analyzer configuration for rangebar workspace
# Documentation: https://rust-analyzer.github.io/manual.html#configuration

[workspace]
# Discover all workspace members
discoverProjectRunner = ["cargo", "metadata"]

[cargo]
# Load out dirs from check/build output (for procedural macros)
loadOutDirsFromCheck = true

# Run cargo check on save for instant feedback
autoreload = true

# Use all features by default for better code completion
features = "all"

# Target directory (default is fine, but explicit for clarity)
targetDir = "target"

[checkOnSave]
# Run clippy on save instead of just check
command = "clippy"

# Extra args for clippy
extraArgs = [
    "--all-targets",
    "--all-features",
]

[diagnostics]
# Enable experimental diagnostics
experimental = true

# Disable certain noisy diagnostics
disabled = []

# Warning level
warningsAsInfo = []
warningsAsHint = []

[imports]
# Automatically merge imports
granularity.group = "module"

# Prefix for external crate imports
prefix = "crate"

[inlayHints]
# Show type hints
typeHints.enable = true

# Show parameter name hints
parameterHints.enable = true

# Show chaining hints
chainingHints.enable = true

# Lifetime elision hints
lifetimeElisionHints.enable = "skip_trivial"

[lens]
# Enable code lens for run/debug
enable = true

# Show references count
references.enable = true

# Show implementation count
implementations.enable = true

[completion]
# Automatically add imports
autoimport.enable = true

# Enable postfix completions (.if, .match, etc.)
postfix.enable = true

[assist]
# Expression fill default
expressionFillDefault = "default"

[procMacro]
# Enable procedural macros
enable = true

# Expand attributes
attributes.enable = true

[rustfmt]
# Use rustfmt for formatting
enable = true

# Extra args for rustfmt
extraArgs = []
