# Example Rust code to load this configuration:
#
# use serde::Deserialize;
# use std::collections::HashMap;
#
# #[derive(Debug, Deserialize)]
# struct InstrumentConfig {
#     name: String,
#     description: String,
#     decimal_factor: f64,
#     start_date: String,
#     #[serde(default)]
#     validated: bool,
# }
#
# #[derive(Debug, Deserialize)]
# struct Config {
#     instruments: HashMap<String, HashMap<String, HashMap<String, InstrumentConfig>>>,
# }
#
# let config: Config = toml::from_str(include_str!("dukascopy-instrument-config.toml"))?;
# let eurusd = &config.instruments["forex"]["majors"]["EURUSD"];
# println!("EURUSD decimal_factor: {}", eurusd.decimal_factor);

