# mpv configuration file
# Auto-resume playback from last position

# Save playback position on quit (works with any quit method)
save-position-on-quit=yes

# Resume playback from saved position (enabled by default in mpv)
# resume-playback=yes

# Keep window open after playback finishes (optional - uncomment if desired)
# keep-open=yes

# Screenshot settings (optional)
screenshot-format=png
screenshot-png-compression=8
screenshot-directory=~/Pictures/mpv-screenshots

# Hardware acceleration (macOS)
hwdec=auto-safe

# Cache settings for streaming
cache=yes
demuxer-max-bytes=500M
demuxer-max-back-bytes=100M

# OSD (on-screen display) settings
osd-level=1
osd-duration=2500

# Subtitle settings
sub-font=Roboto
sub-bold=yes
sub-font-size=40
sub-font-provider=fontconfig
