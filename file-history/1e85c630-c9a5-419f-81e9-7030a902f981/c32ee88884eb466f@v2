    try:
        results = demonstrate_ml_optimized_microstructure_evaluation()
        if results:
            print("üéâ Evaluation completed successfully!")
            print("üìù Results available in 'results' variable for further analysis")
        else:
            print("‚ùå Evaluation failed - check data and configuration")
