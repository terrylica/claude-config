# Clickable file paths with Cmd+Click
[[hints.enabled]]
# Match file paths with optional line numbers (e.g., /path/to/file.md:10)
regex = "[^\\u0000-\\u001F\\u007F-\\u009F<>\"\\s{-}\\^⟨⟩`]+(:\\d+)?(:\\d+)?"
command = { program = "/opt/homebrew/bin/alacritty", args = ["msg", "create-window", "-e", "hx"] }
post_processing = true
persist = false
mouse = { enabled = true, mods = "Command" }

[[hints.enabled]]
# Match absolute file paths (starting with / or ~)
regex = "(^|\\s)([/~][\\w\\-./_]+)"
command = { program = "/opt/homebrew/bin/alacritty", args = ["msg", "create-window", "-e", "hx"] }
post_processing = true
persist = false
mouse = { enabled = true, mods = "Command" }
