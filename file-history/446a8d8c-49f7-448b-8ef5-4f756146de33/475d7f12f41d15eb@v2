name: CI

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

env:
  CARGO_TERM_COLOR: always

jobs:
  test:
    name: Test Suite
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable
        with:
          components: clippy, rustfmt

      - name: Cache cargo tools
        uses: actions/cache@v4
        with:
          path: ~/.cargo/bin
          key: ${{ runner.os }}-cargo-tools-${{ hashFiles('**/Cargo.toml') }}
          restore-keys: |
            ${{ runner.os }}-cargo-tools-

      - name: Install cargo tools
        run: |
          command -v cargo-audit || cargo install cargo-audit --locked
          command -v cargo-deny || cargo install cargo-deny --locked
          command -v cargo-machete || cargo install cargo-machete --locked
          command -v cargo-nextest || cargo install cargo-nextest --locked

      - name: Security audit
        run: cargo audit --ignore unmaintained

      - name: License and policy check
        run: cargo deny check

      - name: Check unused dependencies
        run: cargo machete --with-metadata || true

      - name: Run tests
        run: cargo nextest run --workspace --features rangebar/test-utils,rangebar/providers,rangebar/exness,rangebar/streaming

      - name: Run clippy
        run: cargo clippy -- -D warnings

      - name: Check formatting
        run: cargo fmt -- --check

      - name: Build binaries
        run: cargo build --release

