{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.local/schemas/progress-update.json",
  "title": "ProgressUpdate",
  "description": "Workflow execution progress tracking",
  "type": "object",
  "required": [
    "workspace_id",
    "session_id",
    "workflow_id",
    "status",
    "stage",
    "progress_percent",
    "message",
    "timestamp"
  ],
  "properties": {
    "workspace_id": {
      "type": "string",
      "description": "8-character workspace hash",
      "pattern": "^[a-f0-9]{8}$"
    },
    "session_id": {
      "type": "string",
      "description": "UUID session identifier",
      "format": "uuid"
    },
    "workflow_id": {
      "type": "string",
      "description": "Workflow identifier",
      "enum": [
        "lychee-autofix",
        "prune-legacy",
        "fix-docstrings",
        "rename-variables"
      ]
    },
    "status": {
      "type": "string",
      "description": "Overall workflow status",
      "enum": [
        "running",
        "completed",
        "error"
      ]
    },
    "stage": {
      "type": "string",
      "description": "Current execution stage",
      "enum": [
        "starting",
        "rendering",
        "executing",
        "waiting",
        "completed"
      ]
    },
    "progress_percent": {
      "type": "integer",
      "description": "Completion percentage",
      "minimum": 0,
      "maximum": 100
    },
    "message": {
      "type": "string",
      "description": "Human-readable progress message",
      "maxLength": 200
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
