{
  "sanitization": {
    "patterns": [
      {
        "name": "remove_markdown_links",
        "pattern": "\\[([^\\]]*)\\]\\([^\\)]*\\)",
        "replacement": "$1",
        "description": "Convert [text](url) to text"
      },
      {
        "name": "remove_backticks", 
        "pattern": "`([^`]*)`",
        "replacement": "$1",
        "description": "Remove code backticks"
      },
      {
        "name": "remove_asterisk_emphasis",
        "pattern": "\\*\\*([^\\*]*)\\*\\*",
        "replacement": "$1", 
        "description": "Remove **bold** formatting"
      },
      {
        "name": "remove_single_asterisk",
        "pattern": "\\*([^\\*]*)\\*",
        "replacement": "$1",
        "description": "Remove *italic* formatting"
      },
      {
        "name": "normalize_whitespace",
        "pattern": "\\s+",
        "replacement": " ",
        "description": "Normalize multiple whitespace to single space"
      }
    ],
    "prefixes_to_remove": [
      "Yourhighness the Great, Destroyer of Catastrophically Underwhelming Flesh-Based Social Protocols pro"
    ]
  },
  "aggregation": {
    "paragraph_separators": ["\\n\\n", "\\n\\r\\n"],
    "sentence_endings": ["\\.", "\\!", "\\?"],
    "min_content_quality_chars": 10,
    "skip_patterns": [
      "^\\s*$",
      "^Skipping tool result message$",
      "^Tool ran without output or errors$"
    ]
  }
}