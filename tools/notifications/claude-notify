#!/bin/bash
# Claude Code Notification Sender with Toy Story sound
# Usage: claude-notify <title> <message>

if [[ $# -lt 2 ]]; then
    echo "Usage: claude-notify <title> <message>"
    echo "Example: claude-notify 'Build Complete' 'All tests passed'"
    exit 1
fi

# Always use Toy Story sound for Claude Code notifications
pushover-notify "$1" "$2" "iphone_13_mini" "toy_story"