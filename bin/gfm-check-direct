#\!/bin/bash
# Direct GFM checker execution - bypasses command cache issues
workspace_path="$(cd "${1:-$(pwd)}" && pwd)"
echo "üîç Running GFM link integrity check on: $workspace_path"
uv run --directory "$HOME/.claude/tools/gfm-link-checker" "$HOME/.claude/tools/gfm-link-checker/gfm_link_checker.py" "$workspace_path"
