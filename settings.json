{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 99999,
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "CLAUDE_DISABLE_TITLE_UPDATES": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Read(*)",
      "Grep",
      "LS",
      "NotebookRead",
      "List",
      "Edit",
      "Write",
      "Bash",
      "NotebookEdit"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/automation/cns/cns_hook_entry.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/automation/prettier/format-markdown.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/automation/lychee/runtime/hook/check-links-hybrid.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/automation/lychee/runtime/hook/session-start-tracker.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/automation/lychee/testing/inject-results.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.config/ccstatusline/custom-statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": false,
    "github-issues-operations@github-issues-skills": true
  },
  "alwaysThinkingEnabled": true
}
